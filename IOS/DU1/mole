#!/bin/sh



print_help(){
    echo "Napoveda:"
    echo "      -h \ --help:"
    echo "                  zobrazi napovedu"
    echo "      [-g Group] FILE"
    echo "      [-m] [FILTERS] [DIRECTORY]"
}


while [ "$#" -gt 0 ]; do
    case $1 in
        -h | --help)
            print_help
            exit 0
            ;;
        -g)
            GROUP=$2
            ;;
        -m)
            ;;
        list)
            ;;
        -a)
            ;;
        -b)
            ;;
        secret-log)
            echo "Spusteni secret logu"
            shift
            ;;
        *)
            echo "Chyba"
            exit 1
            ;;
    esac
done





